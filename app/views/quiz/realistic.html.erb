<div class="container-realistic">
  <h1>Realistic Challenge</h1>
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <form action="/realistic" method="post" autocomplete="off">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

          <div class="panel-body">
            <div class="row">
              <div class="col-xs-12">
                <div class="thumbnail col-sm-4 col-xs-12">
                  <div class="quiz-image-container">
                    <%= image_tag(@current_game["mp_id"] ? "mps/#{@current_game["mp_id"]}.jpeg" : "", class: "quiz-image") %>
                  </div>
                </div>
                <div class="col-sm-8 col-xs-12">
                  <h3>Name that MP!</h3>
                  <div class="form-group">
                    <label for="mpName">MP Name</label>
                    <div class="row">
                      <div class="col-xs-6">
                        <input autofocus name="answer[name]" type="text" class="form-control" id="mpName" placeholder="Name">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-xs-12">
                      <button name="answer[party]" value="CPC" class="btn btn-default btn-primary" type="submit">CPC</button>
                      <button name="answer[party]" value="LIB" class="btn btn-default btn-danger" type="submit">LIB</button>
                      <button name="answer[party]" value="NDP" class="btn btn-default btn-warning" type="submit">NDP</button>
                      <button name="answer[party]" value="IND" class="btn btn-default btn-info" type="submit">IND</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col align-self-end">
            <div class="panel-footer">
              <a class="btn btn-default" href="<%= reset_url %>" role="button">Restart</a>
              <button name="skip" class="btn btn-default" type="submit">Skip</button>
              <%# <button class="btn btn-default btn-success" type="submit">Submit</button> %>
            </div>
          </div>
        </form>
      </div>
      <div class="progress">
        <% if @current_game %>
          <% session[:current_game]["answers"].map do |ans| %>
            <div class="progress-bar <%= progressbar_type(ans) %>" role="progressbar" aria-valuenow="1" aria-valuemin="0" aria-valuemax="<%= @current_game["total"] %>" style="width: <%= 100.0 / @current_game["total"] %>%;"></div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>